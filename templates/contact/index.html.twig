{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}
    <div class="flex text-center justify-center my-5">
        <div class="form">

            {{form_start(form, {'attr': {'class': 'w-full my-5 flex flex-col items-center'}}) }}
                <h1 class="text-center text-xl"> Me contacter :</h1>
                <div class="my-1 flex formInputs">
                    <div class="my-1">
                        {{ form_label(form.lastName, 'Nom de famille : ')}}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control, rounded, appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="my-1">
                        {{ form_label(form.firstName, 'Prénom : ')}}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control, rounded, appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                </div>

                <div class="my-1 flex formInputs">
                    <div class="my-1">
                        {{ form_label(form.email, 'Email : ')}}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control, rounded, appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="my-1">
                        {{ form_label(form.phoneNumber, 'Numéro de téléphone : ')}}
                        {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control, rounded, appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                        {{ form_errors(form.phoneNumber) }}
                    </div>
                </div>

                <div class="my-1">
                    {{ form_label(form.subject, 'À propos de : ')}}
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control, rounded, appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                    {{ form_errors(form.subject) }}
                </div>

                <div class="formInputs my-1 flex">
                    <div class="my-1">
                        {{ form_label(form.message, 'Votre message : ')}}
                        {{ form_widget(form.message, {'attr': {'class': 'form-control, rounded, appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white'}}) }}
                        {{ form_errors(form.message) }}
                    </div>
                </div>

                <div class="my-3 flex justify-center">
                    <button class="btn btn-lg text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit"> 
                        Envoyer 
                    </button>
                </div>
    
    {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
