
{% block body %}

    <header>
        <nav>
            <div class="max-w-screen-xl lg:flex-nowrap flex flex-wrap items-center justify-between mx-auto p-4">
                <img src="/image/Logo.jpg" class="h-12" alt="Logo Sandrine Coupart">      
                    <button data-collapse-toggle="navbar-user" type="button" class="buttonMenuBurger lg:hidden inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-user" aria-expanded="false">
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                        </svg>
                    </button>
            
                <div class="menu items-center justify-between sm-hidden w-full" id="navbar-user">
                    <ul class="burger-menu flex flex-col lg:flex-row lg:justify-end font-medium p-4 mt-4 border border-transparent rounded-lg">
                        <li>
                            <a href="#" class="block py-2 px-3 font-medium rounded hover:bg-gray-100 text-black rounded dark:hover:bg-white-700">Accueil</a>
                        </li>
                        <li>
                            <a href="#" class="block py-2 px-3 font-medium rounded hover:bg-gray-100 text-black dark:hover:bg-white-700 dark:border-gray-700">Recettes</a>
                        </li>
                        <li>
                            <a href="#" class="block py-2 px-3 font-medium rounded hover:bg-gray-100 text-black dark:hover:bg-white-700 dark:border-gray-700">Contact</a>
                        </li>
                        <li>
                            <a href="#" class="block py-2 px-3 font-medium rounded hover:bg-gray-100 text-black dark:hover:bg-white-700 dark:border-gray-700">Espace personnel</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

<script>
    
document.addEventListener("DOMContentLoaded", (event) => {
    event.preventDefault();
    const menu = document.querySelector('.menu');
    const btnMenuBurger = document.querySelector('.buttonMenuBurger');

    const toggleMenu = () => 
    {
        if(menu.style.display === 'block') 
        {
            menu.style.display = "none";
        } else {
            menu.style.display = "block";
        }
    }

    btnMenuBurger.addEventListener('click', toggleMenu);
}) 
</script>